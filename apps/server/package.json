{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "cd ../../ && bun run db:push",
    "db:migrate": "cd ../../ && bun run db:migrate"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.0",
    "@lectio/api": "workspace:*",
    "@lectio/auth": "workspace:*",
    "@lectio/db": "workspace:*",
    "@polar-sh/sdk": "^0.34.16",
    "@trpc/server": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "hono": "catalog:",
    "jszip": "^3.10.1",
    "sharp": "^0.34.5",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "typescript": "catalog:",
    "tsdown": "^0.16.5",
    "@lectio/config": "workspace:*"
  }
}